a{
    color: black;
    text-decoration-line: none;
}
.backgroundColorwhite {
    background-color: white;
}

.adminBorder {
    border: solid 1px rgb(190, 190, 190);
    border-bottom: solid 0px;
}
.borderBottom {
    border-bottom: solid 1px rgb(190, 190, 190);
}
.bodyBox {
    width: 1200px; 
    margin: auto;
}
.verticalMiddle {
    vertical-align: middle;
}
input textarea{
	border-color: lightgray;
    border: solid 1px #ced4da;
    border-bottom: solid 1px #ced4da;
    border-radius: 0.25rem;
    font-size: 15px;
}

textarea{resize:none;}

.daterangepicker select.secondselect, .daterangepicker select.ampmselect{
    display: none;
}
.inputPlusSelectBox{
    color: rgb(94, 94, 94);
    font-size: 15px;
}

body{background-color: #e0e0e0;}

body>div.mb-5{
    margin: auto;
}

.ck-editor__editable {
    min-height: 300px;
}

.buttonBox{
    background-color: #1187cf;
    border-radius: 0.25rem;
    color:white;
    border: none;
    height: 32px;
}

.loginBox{position: absolute; top: 50%; left: 50%; transform: translateY(-50%) translateX(-50%); max-width: 500px; background-color: #F5F5F5;}

.tab-content{display: none;}
.tab-content.active{display: block;}

.DESC::after {
    content: "▲";
    cursor: pointer;
}
.ASC::after {
    content: "▼";
    cursor: pointer;
}

.DESC, .ASC, .ORDER{
    cursor: pointer;
}